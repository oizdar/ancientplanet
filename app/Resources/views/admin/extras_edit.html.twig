{% extends 'base_admin.html.twig' %}

{% block row %}
    <div class="content col-sm-offset-1 col-sm-10">
    <h2> Update data of your {{ form.type.vars.value|capitalize }}.</h2>

    {{ form_start(form) }}

    {% if success is defined %}
      <div class="alert alert-success" role="alert"><strong>{{ success }}</strong></div>
    {% endif %}
    {% if error is defined%}
      <div class="alert alert-danger" role="alert">
        {{ form_errors(form) }}
        {{ form_errors(form.content) }}
        </div>
    {% endif %}

      <div class="form-group row">
        {{ form_label(form.header, 'Header: ', {
            'label_attr':
              {'class': 'col-sm-2 col-form-label'}
          }) }}
        <div class="col-sm-7">
          {{ form_widget(form.header, {
            'attr': {
              'class': 'form-control',
              'disabled': disabled.header
            }
          }) }}
        </div>
      </div>

      <div class="form-group row">
          {{ form_label(form.content, 'Content text: ', {
            'label_attr':
              {'class': 'col-sm-2 col-form-label'}
          }) }}
        <div class="col-sm-10">
          {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
        </div>
      </div>

      <div class="form-group row">
        {{ form_label(form.footer, 'Footer: ', {
            'label_attr':
              {'class': 'col-sm-2 col-form-label'}
          }) }}
        <div class="col-sm-7">
          {{ form_widget(form.footer, {
            'attr': {
              'class': 'form-control input-small',
              'id': 'footer',
              'placeholder': 'Write footer message',
              'disabled': disabled.footer
            }
          }) }}
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-offset-2">
          <a href="{{ path('admin_extras') }}" class="btn btn-warning">
            <span class="glyphicon glyphicon-chevron-left"></span> Back
          </a>
        {{ form_widget(form.submit) }}
        </div>
      </div>

      {{ form_end(form) }}
    </div>
{% endblock %}


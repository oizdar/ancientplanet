{% extends 'base_admin.html.twig' %}
{% block jumbotron %}
    <div class="jumbotron col-sm-7 col-sm-offset-3 col-md-5 col-md-offset-4 col-lg-4 col-lg-offset-4">
        <h3>You must be logged</h3>
        {% if error %}
            <div class="allert alert-danger alert-dismissible" role="alert">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        <form action="{{ path('admin_login') }}" id="login_form" method="POST">
        <div class="form-group">
            <label for="login">Login:</label>
            <input type="text" id="login" class="form-control" placeholder="Enter login" name="_username" value="{{ username }}" />
        </div>
        <div class="form-group">
            <label for="pass">Password:</label>
            <input type="password" id="pass" class="form-control" placeholder="Password" name="_password"/>
        </div>
        <button type="submit" class="btn btn-primary col-xs-offset-10">Login</button>
        </form>
    </div>
{% endblock %}

{% extends 'base_admin.html.twig' %}

{% block row %}
    <div class="content col-sm-offset-1 col-sm-10">
    {% if addPage is defined %}
      <h2> Add New Page </h2>
    {% else %}
      <h2> Update data of choosen Page </h2>
    {% endif %}
    {% if success is defined %}
      <div class="alert alert-success" role="alert"><strong>{{ success }}</strong></div>
    {% endif %}
      {{ form_start(form) }}
    {% if error is defined %}
      <div class="alert alert-danger" role="alert">
        {{ form_errors(form) }}
        {{ form_errors(form.menuTitle) }}
        {{ form_errors(form.parent) }}
        </div>
    {% endif %}
      <div class="form-group row">
        {{ form_label(form.menuTitle, 'Menu Title: ', {
            'label_attr':
              {'class': 'col-sm-2 col-form-label'}
          }) }}
        <div class="col-sm-7">
          {{ form_widget(form.menuTitle, {
            'attr': {
              'class': 'form-control',
            }
          }) }}
        </div>
      </div>

      <div class="form-group row">
        {{ form_label(form.title, 'Page Title: ', {
            'label_attr':
              {'class': 'col-sm-2 col-form-label'}
          }) }}
        <div class="col-sm-7">
          {{ form_widget(form.title, {
            'attr': {
              'class': 'form-control'
            }
          }) }}
        </div>
      </div>

      <div class="form-group row">
          {{ form_label(form.content, 'Content text: ', {
            'label_attr':
              {'class': 'col-sm-2 col-form-label'}
          }) }}
        <div class="col-sm-10">
          {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
        </div>
      </div>

      <div class="form-group row">
        {{ form_label(form.parent, 'Parent: ', {
            'label_attr':
              {'class': 'col-sm-2 col-form-label'}
          }) }}
        <div class="col-sm-7">
          {{ form_widget(form.parent, {
            'attr': {
              'class': 'form-control input-small',
              'id': 'parent',
              'placeholder': 'Write Parent message',
            }
          }) }}
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-offset-2">
          <a href="{{ path('admin_pages') }}" class="btn btn-warning">
            <span class="glyphicon glyphicon-chevron-left"></span> Back
          </a>
        {{ form_widget(form.submit) }}
        </div>
      </div>

      {{ form_end(form) }}
    </div>
{% endblock %}


{% extends 'base_admin.html.twig' %}

{% block row %}
      <div class="content col-sm-offset-1 col-sm-10">
        <h2> List of website editable elements: </h2>
        {% for extra in extras %}
        <div class="extras-row">
          <table class="table table-striped">
            <tbody>
              <tr>
                <th>Type:</th>
                <td>{{ extra.type }}</td>
                <td style="text-align: right">
                  <a class="btn btn-warning"
                    href="{{ path('admin_extras_edit', {'id': extra.id}) }}">
                      <span class="glyphicon glyphicon-edit" aria-hidden="true"> </span> Edit
                  </a>
                </td>
              </tr>
              <tr>
                <th>Header:</th>
                <td colspan="2">
                    {{ extra.header ?: 'Header is empty' }}
                </td>
              </tr>
              <tr>
                <th>Content:</th>
                <td colspan="2">{{ extra.content|raw }}</td>

              </tr>
              <tr>
                <th>Footer:</th>
                <td colspan="2">
                    {{ extra.footer ?: 'Footer is empty' }}
                </td>
              </tr>
            </tbody>
          </table>
          </div>
        {% endfor %}
    </div>
{% endblock %}


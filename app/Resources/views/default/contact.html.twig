{% extends 'base.html.twig' %}


{% block content %}
    <h1> Formularz kontaktowy.</h1>
    <h3> Staram się odpowiadać na każdą wiadomość.</h3>
    <p> Jeżeli masz jakieś uwagi dotyczące treści, wyglądu ewentualnie innych aspektów strony lub po prostu chcesz pogadać lub wymienić się spostrzeżeniami. Zapraszam do kontaktu. </p>
    <hr />
    {{ form_start(form) }}
    {% if success is defined %}
      <div class="alert alert-success" role="alert"><strong>{{ success }}</strong></div>
    {% endif %}
    {% if error is defined %}
      <div class="alert alert-danger" role="alert">
        {{ form_errors(form) }}
        {{ form_errors(form.title) }}
        {{ form_errors(form.content) }}
        {{ form_errors(form.name) }}
        {{ form_errors(form.email) }}
        </div>
    {% endif %}

      <div class="form-group row">
        {{ form_label(form.title, 'Contact Subject: ', {
            'label_attr':
              {'class': 'col-sm-2 col-form-label'}
          }) }}
        <div class="col-sm-7">
          {{ form_widget(form.title, {
            'attr': {
              'class': 'form-control',
              'placeholder': 'Write message subject',
            }
          }) }}
        </div>
      </div>

      <div class="form-group row">
          {{ form_label(form.content, 'Content: ', {
            'label_attr':
              {'class': 'col-sm-2 col-form-label'}
          }) }}
        <div class="col-sm-10">
          {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
        </div>
      </div>

      <div class="form-group row">
        {{ form_label(form.name, 'Name: ', {
            'label_attr':
              {'class': 'col-sm-2 col-form-label'}
          }) }}
        <div class="col-sm-7">
          {{ form_widget(form.name, {
            'attr': {
              'class': 'form-control input-small',
              'placeholder': 'Write name message',
            }
          }) }}
        </div>
      </div>

      <div class="form-group row">
        {{ form_label(form.email, 'e-mail: ', {
            'label_attr':
              {'class': 'col-sm-2 col-form-label'}
          }) }}
        <div class="col-sm-7">
          {{ form_widget(form.email, {
            'attr': {
              'class': 'form-control input-small',
              'placeholder': 'Write your e-mail',
            }
          }) }}
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-offset-9">
        {{ form_widget(form.submit) }}
        </div>
      </div>

      {{ form_end(form) }}
{% endblock %}

{% block right_panel %}
    {% for panel in panels_head %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">{{ panel.header }}</h3>
      </div>
      <div class="panel-body">
        {{ panel.content|raw }}
      </div>
    </div>
    {% endfor %}

    {{ parent() }}

    {% for panel in panels %}
      <div class="panel panel-default">
        <div class="panel-body">
            {{ panel.content|raw }}
        </div>
      </div>
    {% endfor %}
{% endblock %}
